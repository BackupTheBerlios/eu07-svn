COMPILER=g++
CCFLAGS=-g -Wall

LIBS=-losg -losgDB -losgProducer core.a common.a fileio.a

eu07-spt: ${OBJS}
	cd core && ${MAKE}
	cd common && ${MAKE}
	cd fileio && ${MAKE}
	${COMPILER} ${LIBS} -o eu07-spt
	chmod 777 eu07-spt

clean:
	cd core && ${MAKE} clean
	cd common && ${MAKE} clean
	cd fileio && ${MAKE} clean
	rm eu07-spt
